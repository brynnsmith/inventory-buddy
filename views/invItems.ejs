<!DOCTYPE html>
<html lang="en">

<head>
	<meta charset="UTF-8">
	<meta http-equiv="X-UA-Compatible" content="IE=edge">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<title>Document</title>
	<link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
	<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/css/materialize.min.css">
	<link rel="stylesheet" href="css/style.css">
	<link href='https://unpkg.com/boxicons@2.1.2/css/boxicons.min.css' rel='stylesheet'>
	<link rel="stylesheet" href="https://use.typekit.net/lcz4pag.css">
</head>

<body>

	<nav>
    <div class="nav-wrapper">
      <a href="#!" class="brand-logo">Inventory Buddy</a>
      <a href="#" data-target="mobile-demo" class="sidenav-trigger"><i class="material-icons">menu</i></a>
      <ul class="right hide-on-med-and-down">
        <li><a href="/">Home</a></li>
        <li><a href="/logout">Logout</a></li>
        
      </ul>
    </div>
		<ul class="sidenav" id="mobile-demo">
			<li><a href="/">Home</a></li>
			<li><a href="/logout">Logout</a></li>
			
		</ul>
  </nav>

  

	<div class="wrapper card-panel">
		<h1 class="card-title">Inventory Items</h1>
		
		<div class="card">
		<ul class="card-content subcard">

			<li class="col-head">
				<div class="skuCol">SKU</div>
				<div class="nameCol">Name</div>
				<div class="quantityCol">Quantity</div>
				<div class="availableCol">Available</div>
			</li>
			<% items.forEach( el=> { %>
				<li class='invItem' data-id='<%=el._id%>'>
					<span class='skuCol'>
						<%= el.SKU %>
					</span>
					<span class='nameCol'>
						<%= el.itemName %>
					</span>
					<span class='quantityCol'>
						<%= el.quantity%>
					</span>
					<span class='availableCol'>
						<%= el.quantity> 0 ? "Yes" : "No" %>
					</span>
					<span class="edit">
						<input type="number" class="newQuantity" name="newQuantity">
						<span class="changeQuantity btn"> Change Quantity </span>
					</span>
					<span class="del">
						<i class="bx bx-trash"></i>
					</span>
				</li>
				<% }) %>
			</ul>
		</div>
		<div class="card add-card">
		<h2 class="add-item">Add an Item</h2>

		<div class="card-content">
		<form action="/invItems/createInvItem" method='POST'>
			<input type="text" placeholder="Enter Item Name" name='itemName'>
			<input type="number" placeholder="Enter SKU" name='SKU'>
			<input type="number" placeholder="Enter Quantity" name='quantity'>
			<input class='btn' type="submit">
		</form>
	</div>

		
	</div>
</div>
	
  <footer class="page-footer">
		<div class="container footer-wrapper">
			<div class="row">
				<div class="col l6 s12">
					<h5 class="white-text">Footer Content</h5>
					<p class="grey-text text-lighten-4">You can use rows and columns here to organize your footer content.</p>
				</div>
				<div class="col l4 offset-l2 s12">
					<h5 class="white-text">Links</h5>
					<ul>
						<li><a class="grey-text text-lighten-3" href="#!">Link 1</a></li>
						<li><a class="grey-text text-lighten-3" href="#!">Link 2</a></li>
						
					</ul>
				</div>
			</div>
		</div>
		<div class="footer-copyright">
			<div class="container">
			Â© 2022 Copyright Text
			</div>
		</div>
	</footer>

	<script src="js/script.js"></script>
</body>

</html>